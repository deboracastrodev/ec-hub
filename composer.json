{
  "name": "ec-hub/app",
  "description": "E-commerce com ML em PHP 7.4 + Clean Architecture",
  "type": "project",
  "require": {
    "php": "^7.4|^8.0",
    "psr/container": "^1.0",
    "vlucas/phpdotenv": "^5.0",
    "rubix/ml": "^2.2",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.4",
    "fakerphp/faker": "^1.20"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\": "database/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix",
    "cs-check": "php-cs-fixer fix --dry-run",
    "test": "phpunit --coverage-text"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
