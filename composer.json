{
  "name": "ec-hub/app",
  "description": "E-commerce com ML em PHP 7.4 + Clean Architecture",
  "type": "project",
  "require": {
    "php": "^7.4",
    "hyperf/http-server": "^2.2",
    "hyperf/logger": "^2.2",
    "hyperf/database": "^2.2",
    "hyperf/redis": "^2.2",
    "hyperf/config": "^2.2",
    "hyperf/di": "^2.2",
    "psr/container": "^1.0",
    "psr/http-message": "^1.0",
    "vlucas/phpdotenv": "^5.0",
    "monolog/monolog": "^2.0",
    "rubix/ml": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix",
    "cs-check": "php-cs-fixer fix --dry-run",
    "test": "phpunit --coverage-text"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
