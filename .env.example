# Application Environment
APP_ENV=local
APP_DEBUG=true

# Hyperf Configuration
APP_NAME=ec-hub
BASE_PATH=/var/www/html
SCAN_CACHEABLE=true

# Database Configuration
DB_DRIVER=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ec_hub
DB_USERNAME=root
DB_PASSWORD=secret
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

DB_POOL_MIN_CONNECTIONS=1
DB_POOL_MAX_CONNECTIONS=10
DB_POOL_CONNECT_TIMEOUT=10.0
DB_POOL_WAIT_TIMEOUT=3.0
DB_POOL_HEARTBEAT=-1
DB_POOL_MAX_IDLE_TIME=60.0

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_AUTH=null
REDIS_DB=0
REDIS_POOL_MIN_CONNECTIONS=1
REDIS_POOL_MAX_CONNECTIONS=10
REDIS_POOL_CONNECT_TIMEOUT=10.0
REDIS_POOL_WAIT_TIMEOUT=3.0
REDIS_POOL_HEARTBEAT=-1
REDIS_POOL_MAX_IDLE_TIME=60.0

# Swoole HTTP Server
SWOOLE_HTTP_SERVER_PORT=9501
SWOOLE_HTTP_SERVER_HOST=0.0.0.0
SWOOLE_PROCESS_NAME=ec-hub-server
SWOOLE_WORKER_NUM=4
SWOOLE_TASK_WORKER_NUM=2
SWOOLE_MAX_REQUEST=5000

# Logging
LOG_CHANNEL=default
LOG_LEVEL=debug
